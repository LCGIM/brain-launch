<div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <%= link_to("Brain Launch", root_path, class: "navbar-brand") %>
</div>
<div id="navbar" class="collapse navbar-collapse">
  <ul class="nav navbar-nav">
    <li class="active"><a href="#">Home</a></li>
    <li><a href="#about">Products</a></li>
    <% if user_signed_in? %>
      <li class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome, <%= current_user.first_name %><span class="caret"></span></a>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
          <li><a href="#contact">Account</a></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
        </ul>
      </li>
    <% else %>
      <li class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Login<span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li role="separator" class="divider"></li>
          <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-social btn-facebook" do %>
            <span class="fa fa-facebook"></span>
            <li>Facebook</li>
          <% end %>
        </ul>
      <% end %>
    </li>
  </ul>
</div>